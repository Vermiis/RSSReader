<Window x:Class="RSSReader.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSSReader"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="tb_Link" Height="23" Margin="109,13,10,0" TextWrapping="Wrap" VerticalAlignment="Top" DataContextChanged="tb_Link_DataContextChanged"/>
        <Label x:Name="lbl_Name" Content="Link dla RSS" HorizontalAlignment="Left" Margin="21,13,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_Close" Content="Zamknij" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="btn_Close_Click"/>
        <Button x:Name="btn_Save" Content="Zapisz" HorizontalAlignment="Left" Margin="117,239,0,0" VerticalAlignment="Top" Width="75" Click="btn_Save_Click"/>
        <Label x:Name="lbl_RefreshTime" Content="Czas odświeżania(min)" HorizontalAlignment="Left" Margin="21,45,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tb_refreshTime" HorizontalAlignment="Left" Height="23" Margin="162,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
